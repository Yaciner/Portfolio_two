{
  "presets": [ "react",
    ["env", {
      "targets": {
        "browsers" : ["last 2 versions", "safari >= 7"]
      }
    }]
  ],

  "plugins": [
    "transform-decorators-legacy",
    "transform-class-properties",
    "transform-object-rest-spread"
  ],

  "env": {

    "development": {
      "plugins": [
        "transform-react-jsx-source",
        "transform-react-stateless-component-name"
      ]
    }
}
}
